					IsSwipeEnabled="True" IsItemClickEnabled="True"
					IsRightTapEnabled="True"
					IsHoldingEnabled="True" 
					SelectionChanged="ItemGridView_SelectionChanged_1"
					AllowDrop="True"
					IsTapEnabled="True"
